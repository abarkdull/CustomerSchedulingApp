                  <Insets right="120.0" top="10.0" />
               </GridPane.margin>
            </Button>
            <Button fx:id="cancelLbl" layoutX="276.0" layoutY="107.0" mnemonicParsing="false" onAction="#onCancel" text="Cancel" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="TOP">
