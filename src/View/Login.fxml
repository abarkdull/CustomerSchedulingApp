                  <Insets right="50.0" top="10.0" />
               </GridPane.margin>
            </Button>
            <Label fx:id="exceptionsLbl" prefHeight="75.0" prefWidth="234.0" textFill="#d31313" wrapText="true" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets right="20.0" />
               </GridPane.margin>
               <font>
                  <Font name="Courier New" size="11.0" />
               </font>
            </Label>
         </children>
      </GridPane>
      <Label fx:id="loginLbl" layoutX="20.0" layoutY="29.0" text="--Login--">
         <font>
            <Font size="52.0" />
